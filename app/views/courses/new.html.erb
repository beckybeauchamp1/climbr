<h2>Add New Route</h2>

<div class="form">
<%= form_for [@gym, @course] do |f| %>

  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :difficulty %><br>
    <%= f.text_field :difficulty %>
  </p>

  <p>
    <%= f.label :setter %><br>
    <%= f.text_field :setter %>
  </p>

  <p>
    <%= f.label :set_date %><br>
    <%= f.text_field :set_date %>
  </p>

  <p>
    <%= f.submit "ADD" %>
  </p>

<% end %>
</div>
